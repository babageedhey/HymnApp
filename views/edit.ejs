<div class="container-fluid" id="content">
	
	<div class="row">
		<div class="col-md-3">
			
			<div>
				
				<div class="list-group">
					<li class="list-group-item">
					<a href="/"><span class="fa fa-home"></span> Home </a>
					</li>
					<li class="list-group-item active">
					<a href="/the_church_hymnal"> The Church Hymnal</a> 
					</li>
					<li class="list-group-item">
					<a href="/baptist_hymnal"> Baptist Hymnal</a> 
					</li>
					<li class="list-group-item">
						<a href=#> Ancient & Modern</a> 
					</li>
					<li class="list-group-item">
						<a href="/cac_hymnal"> CAC Hymnal</a> 
					</li>
					<li class="list-group-item">
						<a href="the_hymnbook"> The Hymnbook</a> 
					</li>
					<li class="list-group-item">
						<a href=#> Catholic Hymnal</a> 
					</li>
					<li class="list-group-item">
						<a href="chant_book"> Chant Book</a>  
					</li>
				</div>
			</div>
		</div>


		<div class="col-md-6">
			
			<div class="thumbnail">
			<fieldset id="signUpform">
			<legend class="title-h"> Edit <%= hymn.title %> </legend><hr id="hr">
				<form action="/the_church_hymnal/<%=hymn._id %>?_method=PUT" method="POST" role="form">

					<div class="inputReg form-group">
						<label> Number: 
							<input type="text" name="hymn[number]" value="<%= hymn.number %>" class="input-reg form-control">
						</label>
					</div>
					<div class="inputReg form-group">
						<label> Title: 
							<input type="text" name="hymn[title]" value="<%= hymn.title %>" class="input-reg form-control">
						</label>
					</div>
					<div class="inputReg form-group">
						<label> Meter No: 
							<input type="text" name="hymn[meter]" value="<%= hymn.meter %>" class="input-reg form-control">
						</label>
					</div>
					<div class="inputReg form-group">
						<label> Tune-Name: 
							<input type="text" name="hymn[tune_name]" value="<%= hymn.tune_name %>" class="input-reg form-control">
						</label>
					</div>
					<div class="inputReg form-group">
						<label> Score: 
							<input type="text" name="hymn[score]" value="<%= hymn.score %>" class="input-reg form-control">
						</label>
					</div>
					<div class="inputReg form-group">
						<label> Hymn Story: 
							<textarea type="text" name="hymn[caption]" value="<%= hymn.caption %>" class="input-reg form-control" placeholder="<%= hymn.caption %>"></textarea>
						</label>
					</div>

					<button type="submit" class="btn btn-primary"> Submit </button>
				</form>
			</fieldset>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3">
				
				<div class="well"> 
					<div class="thumbnail">
						<img class="img-responsive" src="/images/FeaturedHymns/All-hail.png" >
					</div>
					<div class="thumbnail">
						<img class="img-responsive" src="/images/FeaturedHymns/Safe-in-the-arms.png" >
					</div>
					<div class="thumbnail">
						<img class="img-responsive" src="/images/FeaturedHymns/Jesus-lover.png" >
					</div>
					<div class="thumbnail">
						<img class="img-responsive" src="/images/FeaturedHymns/Abide-with-me.png" >
					</div>
				</div>
			</div>
		</div>
	</div>
