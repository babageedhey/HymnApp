<div class="form-page">
<% include layouts/header %>

<% include layouts/navbar %>

<div class="container" id="content">
	<div class="row">
		
		<div class="forms">
		
		<fieldset id="signUpform">
			<legend> Sign Up</legend>
				<form action="/register" method="POST">
				<div class="form-group"><label> Username: 
				<input type="text" name="username" placeholder="" class="form-control" required/>
				</label></div>
				<div class="form-group"><label> Password: 
				<input type="password" name="password" id="password" placeholder="******" class="form-control" required  />
				</label></div>
				<div class="form-group"><label>Confirm Password: 
				<input type="password" name="confirm_password" id="confirm_password" placeholder="******" class="form-control" required  />
				</label></div>
				<div class="form-group">				
				<button class="btn btn-primary" id="submit-btn"> Submit </button>
				</div>
				</form>
		</fieldset>
	
		</div>
	</div>	
</div>
<% include layouts/footer %>
</div>