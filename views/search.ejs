<% include layouts/header %>

<% include layouts/navbar %>
<div class="container-fluid" id="content">
	<div>
		<p>
			<h5>Search Result: <%= hymnData.length %> Hymns found </h5>
		</p>
	</div>
	
	<div class="row">
		<div class="col-md-3">
			
			<div class="tiles">
				
				<div class="list-group">
					<li class="list-group-item">
					<a href="/"><span class="fa fa-home"></span> Home </a>
					<li class="list-group-item active">
					 <div class="dropdown">
                  	<button class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="padding-left:1px;"><span class="fa fa-list-ul"></span>
                  	<a href="/the_church_hymnal" style="font-size:18px;"> The Church Hymnal</a>
                  	</button>
                  	<ul class="dropdown-menu">
                    	<li class="active"><a href="/the_church_hymnal">Main Book</a></li>
                    	<li><a href="/childrensup">Children Supplement</a></li>
                  	</ul>
                	</div></li>

					<li class="list-group-item">
					<a href="/baptist_hymnal"> Baptist Hymnal</a> 
					</li>
					<li class="list-group-item">
						<a href=#> Ancient & Modern</a> 
					</li>
					<li class="list-group-item">
						<a href="/cac_hymnal"> CAC Hymnal</a> 
					</li>
					<li class="list-group-item">
						<a href="the_hymnbook"> The Hymnbook</a> 
					</li>
					<li class="list-group-item">
						<a href=#> Catholic Hymnal</a> 
					</li>
					<li class="list-group-item">
						<a href="chant_book"> Chant Book</a>  
					</li>
				</div>
			</div>
		</div>

		<div class="col-md-6">
			
			<div class="thumbnail">
			<h3 class="title-h"> Found Hymns </h3><hr id="hr">
			<% if (currentUser && currentUser.username === "geedhey") { %>
					<a role="button" class="btn btn-primary active" id="add-btn" href="/the_church_hymnal/new">Add New Hymn</a>
						
			<% } %>
			
			
			<div class="sort">
                <label class="sortby"> SORT BY:</label>
                <select id="sort-by" class="form-control" onchange="sortBy();">
                	<option value="default"></option>
                    <option value="title">Title</option>
                    <option value="number">Number</option>
                    <option value="tune">Tune-Name</option>
                    <option value="meter">Meter</option>
                </select>
            </div>
				<div class="table-responsive">
					<table class="table table-striped hymn-table sortable" id="sortable">
						<thead id="table-head">
							<tr style="font-size: 18px" class="header">
								<th  class="number tb-head" name="number"> No </th>
								<th  class="title tb-head" name="title"> Title </th>
								<th  class="meter tb-head" name="meter"> Meter No </th>
								<th  class="tune tb-head" name="tune"> Tune Name </th>
							</tr>
						</thead>
						<tbody>

						<tr>
						<% hymnData.forEach(function(hymn){ %>
							<td  class="number">
								<strong style="font-family:Georgia;"><%= hymn.number %></strong>
							</td>
							<td  class="title">
								<a href="/the_church_hymnal/<%=hymn._id %>" style="font-family:Georgia;">
								<%= hymn.title %></a>  
							</td>
							<td  class="meter">
								<strong style="font-family:Georgia;"><%= hymn.meter %></strong>
							</td>
							<td  class="tune">
								<strong style="font-family:Georgia;"><%= hymn.tune_name %></strong>
							</td>
						</tr>
						<%	}); %>
						</tbody>
					</table>
				</div>

			</div>
		</div>
		

		<div class="row">
			<div class="col-md-3">
					
				
			</div>
		</div>
	</div>
</div>
<footer>
	<% include layouts/footer %>
</footer>