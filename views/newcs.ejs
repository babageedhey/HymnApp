						<label> Meter No: </label>
						<input class="form-control" type="text" name="hymn[meter]">  </input>
					</div>
					<div class="form-group">
						<label> Tune-Name: </label>
						<input class="form-control" type="text" name="hymn[tune_name]">  </input>
					</div>
					<div class="form-group">
						<label> Score: </label>
						<input class="form-control" type="text" name="hymn[score]">  </input>
					</div>
					<div class="form-group">
						<label> Hymn Story: </label>
						<textarea class="form-control" type="text" name="hymn[caption]">  </textarea>
					</div>

					<button type="submit" class="btn btn-primary"> Submit </button>
				</form>
