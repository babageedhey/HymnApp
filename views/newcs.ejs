			<h3 class="title-h"> Add new Hymn </h3><hr id="hr">
				<form action="/childrensup" method="POST" role="form">
					<div class="form-group">
						<label> Number: </label>
						<input class="form-control" type="text" name="hymn[number]">  </input>
					</div>
					<div class="form-group">
						<label> Title: </label>
						<input class="form-control" type="text" name="hymn[title]">  </input>
					</div>
